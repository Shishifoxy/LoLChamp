{% extends 'layout.html.twig' %}

{% block title %}Champ index{% endblock %}

{% block body %}
    <div class="bannchamp">
    <h1 class="text-left m-4 pt-3 inverse">Bibliothèque des champions</h1>
    </div>
<div class="row justify-content-center">

        {% for champ in champs %}
            <div class="card col-2 m-4" style="width: 18rem;">
                <img class="card-img-top" src="https://ddragon.leagueoflegends.com/cdn/img/champion/tiles/{{ champ.name|lower|replace({
                    ' ':'', '.':'', '\'':'', 'é':'e', 'sylas':'Sylas',
                    'neeko':'Neeko', 'wukong':'MonkeyKing', 'maître yi':'masteryi', 'nunu et willump':'nunu'
                }) }}_0.jpg" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title text-center">{{ champ.name}}</h5>
                    <p class="card-text text-center">Rôle(s) : </p>
                    <p class="card-text text-center"> Ressource : {{ champ.ressource }}</p>
                    <div class="text-center">
                    <a href="#" class="btn btn-discover2">Fiche du champion</a>
                </div>
            </div>
            </div>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
</div>

    <a href="{{ path('champ_new') }}">Create new</a>
{% endblock %}
